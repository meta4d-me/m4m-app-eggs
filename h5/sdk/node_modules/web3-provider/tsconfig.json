{
    "include": ["./src/**/*.ts"],

    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,

        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true
    }
}
